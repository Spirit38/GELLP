<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="450.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);" xmlns="http://javafx.com/javafx/18.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="450.0">
            <children>
                <Button fx:id="popupbuttonFermer" mnemonicParsing="false" onAction="#cancelPopUpAction" style="-fx-background-color: transparent; -fx-text-fill: #95a5a6; -fx-font-size: 18; -fx-font-weight: bold;" text="✕">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <HBox.margin>
                        <Insets right="15.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <VBox alignment="CENTER" spacing="25.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
            <children>
                <Circle fill="linear-gradient(to bottom right, #e91e63, #ff5722)" radius="25.0" />
                <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Type d'événement" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Text>
                <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Sélectionnez le type d'événement que vous souhaitez créer" textAlignment="CENTER" wrappingWidth="350.0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
                <VBox spacing="15.0">
                    <children>
                        <Button fx:id="popupbuttonEvenementOfficiel" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#popupEvenementOfficielCLick" prefHeight="50.0" style="-fx-background-color: linear-gradient(to right, #e91e63, #ff5722); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 1);" text="Événement Officiel">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Text fill="#95a5a6" strokeType="OUTSIDE" strokeWidth="0.0" text="Assemblées générales, réunions syndic, travaux..." textAlignment="CENTER">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Text>
                        <Button fx:id="popupbuttonEvenementSocial" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#popupEvenementSocialCLick" prefHeight="50.0" style="-fx-background-color: transparent; -fx-text-fill: #e91e63; -fx-border-color: #e91e63; -fx-border-width: 2; -fx-background-radius: 12; -fx-border-radius: 12; -fx-font-size: 16; -fx-font-weight: bold;" text="Événement Social">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                        </Button>
                        <Text fill="#95a5a6" strokeType="OUTSIDE" strokeWidth="0.0" text="Fêtes, animations, activités entre voisins..." textAlignment="CENTER">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Text>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </children>
</VBox>
