<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<VBox prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: linear-gradient(to right, #e91e63, #ff5722); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
         <children>
            <Button fx:id="ajoutCoprobuttonRetour" mnemonicParsing="false" onAction="#cancelAjoutCoproprietaireAction" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 25; -fx-border-radius: 25; -fx-text-fill: white; -fx-font-weight: bold;" text="← Retour">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GELPP" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Text>
            <Text fill="#ffffff99" strokeType="OUTSIDE" strokeWidth="0.0" text=" - Ajouter un Membre" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets top="8.0" />
               </HBox.margin>
            </Text>
            <Region HBox.hgrow="ALWAYS" />
            <Pane prefWidth="80.0" />
         </children>
      </HBox>
      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="30.0">
               <padding>
                  <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
               </padding>
               <children>
                  <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Circle fill="linear-gradient(to bottom right, #e91e63, #ff5722)" radius="8.0" />
                              <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Informations du Copropriétaire" textAlignment="LEFT">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <HBox spacing="40.0">
                           <children>
                              <VBox spacing="20.0" style="-fx-background-color: #fafafa; -fx-background-radius: 12; -fx-border-color: #e0e0e0; -fx-border-radius: 12; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                                 <padding>
                                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                 </padding>
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <Circle fill="linear-gradient(to bottom right, #e91e63, #ff5722)" radius="6.0" />
                                          <Text fill="#34495e" strokeType="OUTSIDE" strokeWidth="0.0" text="Identité" textAlignment="LEFT">
                                             <font>
                                                <Font name="System Bold" size="18.0" />
                                             </font>
                                          </Text>
                                       </children>
                                    </HBox>
                                    <VBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="labelNomCopro" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14;" text="Nom" />
                                                <TextField fx:id="ajoutCoprotfNomCopro" promptText="Entrez le nom" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14;" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="labelPrénomCopro" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14;" text="Prénom" />
                                                <TextField fx:id="ajoutCoprotfPrenomCopro" promptText="Entrez le prénom" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              <VBox spacing="20.0" style="-fx-background-color: #fafafa; -fx-background-radius: 12; -fx-border-color: #e0e0e0; -fx-border-radius: 12; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                                 <padding>
                                    <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                 </padding>
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <Circle fill="linear-gradient(to bottom right, #ff5722, #ff9800)" radius="6.0" />
                                          <Text fill="#34495e" strokeType="OUTSIDE" strokeWidth="0.0" text="Contact" textAlignment="LEFT">
                                             <font>
                                                <Font name="System Bold" size="18.0" />
                                             </font>
                                          </Text>
                                       </children>
                                    </HBox>
                                    <VBox spacing="15.0">
                                       <children>
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="labelEmail" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14;" text="E-mail" />
                                                <TextField fx:id="ajoutCoprotfEmail" promptText="exemple@email.com" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14;" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="labelNumeroTelephone" style="-fx-font-weight: bold; -fx-text-fill: #34495e; -fx-font-size: 14;" text="Numéro de téléphone" />
                                                <TextField fx:id="ajoutCoprotfNumeroTelephone" onKeyPressed="#ajoutCoprotfNumeroTelephoneKeyPressed" promptText="06 XX XX XX XX" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <Button fx:id="ajoutCoprobuttonEnregistrer" mnemonicParsing="false" onAction="#ajoutCoproEnregistrerClick" prefHeight="45.0" prefWidth="200.0" style="-fx-background-color: linear-gradient(to right, #e91e63, #ff5722); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-size: 16; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0, 0, 1);" text="Enregistrer">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
         <children>
            <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="© 2025 GELPP - Tous droits réservés" textAlignment="CENTER">
               <font>
                  <Font size="12.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </children>
</VBox>
