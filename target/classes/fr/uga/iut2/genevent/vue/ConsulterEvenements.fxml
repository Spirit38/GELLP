<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header -->
                <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: linear-gradient(to right, #e91e63, #ff5722); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                    <children>
                        <Button fx:id="consulterEvenementsbuttonRetour" mnemonicParsing="false" onAction="#cancelConsulterEvenementAction" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 25; -fx-border-radius: 25; -fx-text-fill: white; -fx-font-weight: bold;" text="← Retour">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GELPP" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Text>
                        <Text fill="#ffffff99" strokeType="OUTSIDE" strokeWidth="0.0" text=" - Consulter les Événements" textAlignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets top="8.0" />
                            </HBox.margin>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="consulterEvenementsbuttonAjouterEvenement" mnemonicParsing="false" onAction="#consulterEvenementsAjouterCLick" style="-fx-background-color: rgba(255,255,255,0.2); -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 25; -fx-border-radius: 25; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Ajouter">
                            <cursor>
                                <Cursor fx:constant="HAND" />
                            </cursor>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>

                <!-- Barre de recherche -->
                <HBox alignment="CENTER" spacing="15.0" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
                    <children>
                        <TextField fx:id="consulterEvenementsrechercheTextField" promptText="Rechercher un événement..." style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 12 20; -fx-font-size: 14;" HBox.hgrow="ALWAYS" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                    </padding>
                </HBox>

                <!-- Contenu principal avec scroll -->
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox fx:id="listeEvenementsContainer" spacing="20.0">
                            <padding>
                                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                            </padding>
                        </VBox>
                    </content>
                </ScrollPane>

                <!-- Footer -->
                <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
                    <children>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="© 2025 GELPP - Tous droits réservés" textAlignment="CENTER">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
