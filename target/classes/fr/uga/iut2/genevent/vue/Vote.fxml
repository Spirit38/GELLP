<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="719.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #f8f9fa, #e9ecef);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" prefHeight="80.0" style="-fx-background-color: linear-gradient(to right, #e91e63, #ff5722); -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);">
         <children>
            <Button fx:id="voteButtonRetour" mnemonicParsing="false" onAction="#cancelVoteAction" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 2; -fx-background-radius: 25; -fx-border-radius: 25; -fx-text-fill: white; -fx-font-weight: bold;" text="← Annuler">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="GELPP" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="36.0" />
               </font>
            </Text>
            <Text fill="#ffffff99" strokeType="OUTSIDE" strokeWidth="0.0" text=" - Système de Vote" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets top="8.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>

      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="30.0">
               <padding>
                  <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
               </padding>
               <children>
                  <!-- Section Titre -->
                  <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Circle fill="linear-gradient(to bottom right, #e91e63, #ff5722)" radius="8.0" />
                              <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Créer un Vote" textAlignment="LEFT">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="Ajoutez des propositions et définissez le nombre de votes pour chaque option" textAlignment="LEFT">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Text>
                     </children>
                  </VBox>

                  <!-- Section Propositions -->
                  <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Circle fill="linear-gradient(to bottom right, #ff5722, #ff9800)" radius="6.0" />
                              <Text fill="#2c3e50" strokeType="OUTSIDE" strokeWidth="0.0" text="Propositions de Vote" textAlignment="LEFT">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>

                        <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10;">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <!-- En-têtes -->
                              <HBox spacing="20.0">
                                 <children>
                                    <VBox prefWidth="400.0" spacing="5.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Text fill="#34495e" strokeType="OUTSIDE" strokeWidth="0.0" text="Propositions" textAlignment="LEFT">
                                             <font>
                                                <Font name="System Bold" size="16.0" />
                                             </font>
                                          </Text>
                                       </children>
                                    </VBox>
                                    <VBox alignment="CENTER" prefWidth="200.0" spacing="5.0">
                                       <children>
                                          <Text fill="#34495e" strokeType="OUTSIDE" strokeWidth="0.0" text="Nombre de votes" textAlignment="CENTER">
                                             <font>
                                                <Font name="System Bold" size="16.0" />
                                             </font>
                                          </Text>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>

                              <!-- GridPane pour les propositions -->
                              <GridPane fx:id="voteGpPropositions" hgap="20.0" prefHeight="35.0" prefWidth="625.0" vgap="15.0">
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" maxWidth="351.0" minWidth="0.0" prefWidth="159.0" />
                                    <ColumnConstraints hgrow="ALWAYS" maxWidth="581.0" minWidth="10.0" prefWidth="317.0" />
                                    <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="200.0" />
                                 </columnConstraints>
                                 <children>

                                    <HBox alignment="CENTER" spacing="10.0" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                 </children>
                                 <rowConstraints>
                                    <RowConstraints />
                                 </rowConstraints>
                              </GridPane>
                           </children>
                        </VBox>

                        <!-- Bouton Ajouter Proposition -->
                        <HBox alignment="CENTER_LEFT">
                           <children>
                              <Button fx:id="voteButtonAjouterProposition" mnemonicParsing="false" onAction="#voteButtonAjouterPropositionClick" style="-fx-background-color: transparent; -fx-text-fill: #e91e63; -fx-border-color: #e91e63; -fx-border-width: 2; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-size: 14; -fx-font-weight: bold;" text="+ Ajouter une proposition" HBox.hgrow="ALWAYS">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <!-- Section Actions -->
                  <VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                     <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <Button fx:id="voteButtonValider" mnemonicParsing="false" onAction="#voteButtonValiderClick" style="-fx-background-color: linear-gradient(to right, #e91e63, #ff5722); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 16; -fx-font-weight: bold; -fx-padding: 12 30 12 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Valider le Vote">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>

      <!-- Footer -->
      <HBox alignment="CENTER" prefHeight="50.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 1 0 0 0;">
         <children>
            <Text fill="#7f8c8d" strokeType="OUTSIDE" strokeWidth="0.0" text="© 2025 GELPP - Tous droits réservés" textAlignment="CENTER">
               <font>
                  <Font size="12.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </children>
</VBox>
